<Window x:Class="auction_app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:auction_app.VM"
        xmlns:local="clr-namespace:auction_app"
        Background="Gray"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="450" MinWidth="800">
    
    <Grid>
        <Button Content="Login" x:Name="LoginButton" MaxWidth="60px" MaxHeight="30" Command="{Binding SwitchWindowsCommand}" Margin="-360,-192,360,192"/>

    </Grid>
    
</Window>
